// Prisma Schema for CareerCraft AI
// Database: PostgreSQL on Google Cloud SQL or local

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - handles authentication and profile
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password for credentials provider
  role          Role      @default(USER)
  
  // Subscription & billing
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  resumes       Resume[]
  analyses      Analysis[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email])
}

enum Role {
  USER
  ADMIN
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

// NextAuth Verification Token
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

// Resume model - stores uploaded resume files
model Resume {
  id          String   @id @default(cuid())
  userId      String
  fileName    String
  fileUrl     String   // GCS URL
  fileSize    Int      // Bytes
  mimeType    String
  parsedText  String?  @db.Text
  status      ResumeStatus @default(PROCESSING)
  
  // Relations
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  analyses    Analysis[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
}

enum ResumeStatus {
  PROCESSING
  READY
  ERROR
}

// Analysis model - stores AI analysis results
model Analysis {
  id              String   @id @default(cuid())
  userId          String
  resumeId        String
  type            AnalysisType
  status          AnalysisStatus @default(PENDING)
  
  // Analysis results
  overallScore    Float?
  strengths       String[] @default([])
  weaknesses      String[] @default([])
  suggestions     String[] @default([])
  keywords        String[] @default([])
  
  // Detailed sections
  summaryAnalysis Json?
  experienceAnalysis Json?
  skillsAnalysis  Json?
  educationAnalysis Json?
  formattingAnalysis Json?
  atsCompatibility Json?
  
  // AI metadata
  aiModel         String?  // e.g., "gemini-pro", "gpt-4"
  aiProvider      String?  // e.g., "vertex-ai", "openai"
  tokensUsed      Int?
  processingTime  Int?     // Milliseconds
  
  // Relations
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([resumeId])
  @@index([type])
  @@index([status])
}

enum AnalysisType {
  COMPREHENSIVE
  ATS_SCAN
  GRAMMAR_CHECK
  KEYWORD_OPTIMIZATION
  FORMAT_REVIEW
}

enum AnalysisStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// Usage tracking for rate limiting and analytics
model Usage {
  id          String   @id @default(cuid())
  userId      String
  action      UsageAction
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  
  createdAt   DateTime @default(now())
  
  @@index([userId, createdAt])
  @@index([action, createdAt])
}

enum UsageAction {
  RESUME_UPLOAD
  ANALYSIS_REQUEST
  API_CALL
  EXPORT_PDF
}

// Admin logs
model AuditLog {
  id          String   @id @default(cuid())
  userId      String?
  action      String
  resource    String?
  details     Json?
  ipAddress   String?
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}
